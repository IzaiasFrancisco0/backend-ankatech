generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  ATIVO
  INATIVO
}

model Cliente {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  status    Status
  alocacoes Alocacao[]
}

model Ativo {
  id         Int        @id @default(autoincrement())
  nome       String
  valorAtual Float
  alocacoes  Alocacao[]
}

model Alocacao {
  id         Int @id @default(autoincrement())
  clienteId  Int
  ativoId    Int
  quantidade Int @default(1)

  cliente Cliente @relation(fields: [clienteId], references: [id])
  ativo   Ativo   @relation(fields: [ativoId], references: [id])
}
